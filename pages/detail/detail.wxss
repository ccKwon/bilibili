.main {
    padding: 10rpx;
    color: #666;
}

.video_info {
    margin-top: 10rpx;
}

.video_info video {
    width: 100%;
}

.video_title {
    display: flex;
    justify-content: space-between;
    font-size: 35rpx;
}

.video_deatil {
    margin-top: 5rpx;
    font-size: 28rpx;
}

.viedeo_detail text {
    margin-left: 15rpx;
}

.video_detail .author{
    color: #000;
}



/* 推荐视频 */

.other_list {
    margin-top: 30rpx;
}

.item_other {
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
}

.other_img_wrap {
    width: 38%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.other_img_wrap image {
    height: 100%;
    width: 90%;
    border-radius: 15rpx;
}

.other_info {
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.other_title {
    font-size: 28rpx;
    color: pink;
}

.other_detail {
    font-size: 26rpx;
    color: #666;
}


/* 评论列表 */

.comment_wrap {
    margin-top: 10rpx;
}

.comment_title{
    padding: 10rpx;
    font-size: 28rpx;
}

.comment_list {

}

.comment_item {
    margin-bottom: 10rpx;
    padding: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    justify-content: space-between;
}

.comment_user{
    display: flex;
    flex: 2;
    justify-content: center;
    align-items: center;
}

.comment_user image {
    width: 60%;
    border-radius: 50%;
}

.comment_info {
    display: flex;
    float: 5;
    flex-direction: column;
    justify-content: space-around;
}

.comment_detail {
    display: flex;
    justify-content: space-between;
}

.comment_detail .author{
    font-size: 28rpx;
    color: #000;
}

.comment_detail .date {
    color: #666;
    font-size: 24rpx;
}

.comment_content {
    font-size: 28rpx;
    color: #000;
}
