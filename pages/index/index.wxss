page {
    padding: 10rpx;
}

.nav{
    white-space: nowrap;
    padding: 5rpx 0;
}

.nav .nav_item {
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display: inline-block;
    color: #666666;
}

.nav_item.active {
    border-bottom: 5rpx solid pink;
}


.slides {
    margin-top: 10rpx;
}
.slides swiper {
    height: 250rpx;
}

.slides navigator {
    width: 100%;
    height: 100%;
}

.slides image {
    width: 100%;
    height: 100%;
}


.video_warp {
    display: flex;
    flex-wrap: wrap;
    padding: 5px;
    justify-content: space-between;
}

.video_item {
    width: 48%;
    margin-bottom: 20rpx;
}

.video_img {
    position: relative;
}

.video_img image {
    width: 100%;
    border-radius: 15rpx;
}

.video_img .video_info {
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    color: #fff;
    font-size: 24rpx;
}

.video_title {
    color: #666666;
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}